<% if @favourites.count >= 1 %>
<div class="sign-up-container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All Favourites</h1>
      <ul class="list-group mb-3">
        <% @favourites.each do |fav| %>
          <li class="list-group-item">
            <%= fav.pet.name %>
            <li class="list-group-item" >
              <%= link_to "Go to your favourite pet", pet_path(fav.pet) %>
              <%= button_to("Delete favourite", favourite_path(fav) ,  method: "delete", :class => "btn-ghost") %>
            </li>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<% else %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
  <h1 align="center">You currently don't have any favourite pets! </h1>
  <br>
      <div align="center">
        <%= link_to "Have a look at all the pets waiting for homes...", pets_path, class: 'btn-ghost' %>
      </div>
      <br>
   </div>
  </div>
</div>
<% end %>

