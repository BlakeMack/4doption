<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow-sm">
      <%= simple_form_for @pet do |f| %>
  <%= f.input :name %>
  <%= f.input :species %>
  <%= f.input :breed %>
  <%= f.input :age %>
  <%= f.input :location %>
  <%= f.input :sex %>
  <%= f.input :size %>
  <%= f.input :needs_garden %>
  <%= f.input :adopted %>
  <%= f.submit :class => "btn btn-ghost" %>
<% end %>
      </div>
    </div>
  </div>
</div>
