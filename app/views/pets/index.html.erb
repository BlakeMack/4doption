<div data-controller="filter-search">

      <button type="button" class="btn btn-light"
        data-action="click->filter-search#show"
        data-filter-search-target="hideButton"> Filter Search
     </button>

    <div class="filter-search-dropdown-form d-none"
          data-filter-search-target="dropdown">


            <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Sex</label>
              <select class="custom-select my-1 mr-sm-2" id="Sex" data-filter-search-target="sex"
              data-action="change->filter-search#refine">
                <option selected>Choose...</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
              </select>

                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Species</label>
              <select class="custom-select my-1 mr-sm-2" id="Species" data-filter-search-target="species"
              data-action="change->filter-search#refine">
                <option selected>Choose...</option>
                <option value="Dog">Male</option>
                <option value="Cat">Female</option>
              </select>


            <div class="btn-group">
              <button class="sexButton btn btn-secondary btn-sm dropdown-toggle"
              type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
               Sex
              </button>
              <div class="dropdown-menu">
                <a id="male" class="dropdown-item"  data-action="click->filter-search#refine">Male</a>
                <a id="female" class="dropdown-item"  data-action="click->filter-search#refine">Female</a>
              </div>
            </div>




          <button type="button" class=" close btn btn-link" data-action="click->filter-search#hide">
          close </button>
    </div>
