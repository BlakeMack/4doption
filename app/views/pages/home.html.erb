<div class="home-container">
  <div class="banner-homepage">
      <div class="title">
    <h1> 4Doption</h1>
    <p> Find Your Pet</p>
     <%= link_to "Search Now", pets_path, class: "btn btn-primary" %>
      </div>
  </div>

  <div class="row justify-content-center px-5">
    <% @pets.each do |pet| %>
      <div class="col-md-3 my-3 landing-page-card">
        <%= link_to pet_path(pet), class: 'text-decoration-none' do %>
          <div class="card card-01">
            <%= image_tag "#{pet.species.parameterize}.jpg", class: "card-img-top" %>
            <div class="card-body">
              <h4 class="card-title"> <%= pet.name %></h4>
              <p class="card-text">Species: <%= pet.species %></p>
              <p class="card-text">
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
